create database link bazx_jzsp
     connect to JZDB_FZYSP identified by JZDB_FZYSP
      using '(DESCRIPTION =(ADDRESS_LIST =(ADDRESS =(PROTOCOL = TCP)(HOST = 14.27.64.4)(PORT = 1521)))(CONNECT_DATA =(SERVICE_NAME = bjjzdb)))'

-- 创建查询市局警综视频库的视图（查看已回传的）
create view fzysp_glfkb as select ID,
                                  AJBH,
                                  JQBH,
                                  RYBH,
                                  SPBH,
                                  SPID,
                                  CJR,
                                  SPKSSJ,
                                  SPJSSJ,
                                  SPCXSJ,
                                  SPPSDD,
                                  SPSSDW,
                                  (case spbs when '11' then '执法视频' when '12' then '入区视频' when '13' then '笔录视频' when '14' then '押解录像' when '15' then '搜查或检查录像' when '16' then '辨认录像' when '17' then '讯问录像' when '20' then '其他录像' end) as SPBS,
                                  RYSPFL,
                                  SCDW,
                                  SCSJ,
                                  JCJBH,
                                  SPSC,
                                  JQ_JBSJ,
                                  AJ_SLSJ,
                                  SJ_JBSJ,
                                  RY_LRSJ
 from XRAPUSER.fzysp_glfkb@bazx_jzsp where scdw = '石景山分局'

-- 创建市局警综数据库和办案中心数据库的对比，查询出未上传视频的人员信息
create view fzysp_glfkb_bd as SELECT
                              	PERSONID,
                              	SUSPECTCODE,
                              	CASECODE,
                              	NAME,
                              	IDCARDNO,
                              	GENDER,
                              	BIRTHDAY,
                                AGE,
                              	CASEBRIEF,
                              	ENTERTIME,
                              	PROCESS_DEPTID,
                              	PROCESSTIME,
                              	ISDEL

                              FROM
                              	tzzf.PERSONS_INVOLED p
                              WHERE
                              	SUSPECTCODE IS NOT NULL  and isdel = '0'
                              	AND p.SUSPECTCODE NOT IN (
                              SELECT
                              	rybh
                              FROM
                              	FZYSP_GLFKB
                              WHERE
                              	scdw = '石景山分局'
                              	AND rybh IS NOT NULL)

